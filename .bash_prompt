IWHITE="\[\033[0;97m\]" # White

RESET="\[\033[0m\]" # Reset

function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

# Get the current Ruby version w/ gemset.
function rvm_ruby_ver {
	local gemset=$(echo $GEM_HOME | awk -F'@' '{print $2}')
	[ "$gemset" != "" ] && gemset="@$gemset"
	local version=$(echo $MY_RUBY_HOME | awk -F'-' '{print $2}')
	[ "$version" == "1.8.7" ] && version=""
	local full="ruby-$version$gemset"
	[ "$full" != "ruby-" ] && echo " $full"
}

# Get the current Node.js version
function nvm_nodejs_ver {
	if type nvm >/dev/null 2>&1; then
		local version=$(nvm current)
		echo " node-${version}"
	fi
}

export PS1="$GREEN[ $MAGENTA\u@\h:\W$BLUE\$(rvm_ruby_ver)\$(nvm_nodejs_ver)$YELLOW\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" \")\$(parse_git_branch)$GREEN ]\n$GREEN>: $RESET"
